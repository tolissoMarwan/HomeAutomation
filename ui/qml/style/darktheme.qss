/* Basic dark theme */
QWidget {
    background-color: #333;
    color: #eee;
}

QPushButton {
    background-color: #555;
    border: 1px solid #777;
    padding: 5px 10px;
}

QPushButton:hover {
    background-color: #666;
}

QLineEdit, QTextEdit {
    background-color: #444;
    border: 1px solid #777;
    padding: 3px;
}